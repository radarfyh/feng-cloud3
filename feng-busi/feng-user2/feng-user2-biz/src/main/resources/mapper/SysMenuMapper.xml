<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="work.metanet.feng.admin.mapper.SysMenuMapper">
    <!-- 结果集 -->
    <resultMap type="work.metanet.feng.admin.api.entity.SysMenu" id="SysMenuMap">
        <result property="id" column="id"/>
        <result property="menuName" column="menu_name"/>
        <result property="permission" column="permission"/>
        <result property="path" column="path"/>
        <result property="parentId" column="parent_id"/>
        <result property="icon" column="icon"/>
        <result property="menuDescribe" column="menu_describe"/>
        <result property="sort" column="sort"/>
        <result property="keepAlive" column="keep_alive"/>
        <result property="type" column="type"/>
        <result property="applicationCode" column="application_code"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="delFlag" column="del_flag"/>
    </resultMap>

    <!-- 基本字段 -->
    <sql id="Base_Column_List">id, menu_name, permission, path, parent_id, icon, menu_describe, sort, keep_alive, type, application_code, create_time, update_time, del_flag</sql>

    <!--通过角色查询菜单信息-->
    <select id="listMenusByRoleId" resultMap="SysMenuMap">
        SELECT
            sm.id,
            sm.menu_name,
            sm.permission,
            sm.path,
            sm.parent_id,
            sm.icon,
            sm.menu_describe,
            sm.sort,
            sm.keep_alive,
            sm.type,
            sm.application_code,
            sm.create_time,
            sm.update_time,
            sm.del_flag
        FROM
            sys_menu sm
            LEFT JOIN sys_role_menu srm ON sm.id = srm.menu_id
        WHERE
            sm.del_flag = '0'
            <if test="roleId != null and roleId > 0">
                AND srm.role_id = #{roleId}
            </if>
        ORDER BY
            sm.sort DESC
	</select>
	<!--多租户支持时务必所有表加别名，从而避免故障：Column 'tenant_id' in where clause is ambiguous-->
    <select id="listMenusByRoleIdAndAppCode" resultMap="SysMenuMap">
        SELECT
            sm.id,
            sm.menu_name,
            sm.permission,
            sm.path,
            sm.parent_id,
            sm.icon,
            sm.menu_describe,
            sm.sort,
            sm.keep_alive,
            sm.type,
            sm.application_code,
            sm.create_time,
            sm.update_time,
            sm.del_flag
        FROM
            sys_menu sm
            LEFT JOIN sys_role_menu srm ON sm.id = srm.menu_id
        WHERE
            sm.del_flag = '0'
            <if test="roleId != null and roleId > 0">
                AND srm.role_id = #{roleId}
            </if>
            <if test="appCode != null and appCode != ''">
                AND sm.application_code = #{appCode}
            </if>
            <if test="parentId != null and parentId > 0">
                AND sm.parent_id = #{parentId}
            </if>    
        ORDER BY
            sm.sort DESC
    </select>
</mapper>