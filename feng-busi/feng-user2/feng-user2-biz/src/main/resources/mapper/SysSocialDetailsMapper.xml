<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="work.metanet.feng.admin.mapper.SysSocialDetailsMapper">
    <!-- 结果集 -->
    <resultMap type="work.metanet.feng.admin.api.entity.SysSocialDetails" id="SysSocialDetailsMap">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="staff_id" property="staffId" jdbcType="INTEGER"/>
        <result column="customer_id" property="customerId" jdbcType="INTEGER"/>
        <result column="contact_id" property="contactId" jdbcType="INTEGER"/>
		<result column="owner_type" property="ownerType" jdbcType="VARCHAR"/>
        <result column="type" property="type" 
                
                jdbcType="VARCHAR"/>
        <result column="social_account" property="socialAccount" jdbcType="VARCHAR"/>
        <result column="nickname" property="nickname" jdbcType="VARCHAR"/>
        <result column="avatar" property="avatar" jdbcType="VARCHAR"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
        <result column="app_id" property="appId" jdbcType="VARCHAR"/>
        <result column="app_secret" property="appSecret" jdbcType="VARCHAR"/>
        <result column="redirect_url" property="redirectUrl" jdbcType="VARCHAR"/>
        <result column="is_primary" property="isPrimary"  jdbcType="CHAR"/>
        <result column="organ_code" property="organCode" jdbcType="VARCHAR"/>
        <result column="create_by" property="createBy" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_by" property="updateBy" jdbcType="VARCHAR"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="del_flag" property="delFlag" jdbcType="CHAR"/>
    </resultMap>
    
    <!-- 基本字段 -->
    <sql id="Base_Column_List">
        id, staff_id, customer_id, contact_id, owner_type, type, social_account, 
        nickname, avatar, remark, app_id, app_secret, redirect_url, is_primary, organ_code,
        create_by, create_time, update_by, update_time, del_flag
    </sql>

	<sql id="VO_Column_List">
	    id, staff_id, customer_id, contact_id, owner_type, type, social_account, 
        nickname, avatar, remark, is_primary
	</sql>
	
    <select id="selectByOwner" resultMap="SysSocialDetailsMap">
	    SELECT <include refid="VO_Column_List"/>
	    FROM sys_social_details
	    WHERE del_flag = '0'
	    <choose>
	        <when test="ownerType == 'staff'">
	            AND staff_id = #{ownerId}
	        </when>
	        <when test="ownerType == 'customer'">
	            AND customer_id = #{ownerId}
	        </when>
	        <when test="ownerType == 'contact'">
	            AND contact_id = #{ownerId}
	        </when>
	    </choose>
	    ORDER BY is_primary DESC, create_time DESC
	</select>
</mapper>